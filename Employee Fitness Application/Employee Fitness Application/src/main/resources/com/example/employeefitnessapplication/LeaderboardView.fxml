<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<AnchorPane fx:id="leaderboardPane" prefHeight="650.0" prefWidth="900.0" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.employeefitnessapplication.controller.LeaderboardController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
    <children>
        <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox styleClass="form-container" maxWidth="800.0" spacing="15.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Button onAction="#navigateToDashboard" styleClass="back-button" text="â† Back to Dashboard" />
                                <Region HBox.hgrow="ALWAYS" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                        </HBox>

                        <Label styleClass="section-header" text="Top 10 Fittest Employees" />

                        <TableView fx:id="leaderboardTableView" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="rankColumn" prefWidth="75.0" text="Rank" />
                                <TableColumn fx:id="employeeNameColumn" prefWidth="350.0" text="Employee Name" />
                                <TableColumn fx:id="totalPointsColumn" prefWidth="200.0" text="Total Points" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
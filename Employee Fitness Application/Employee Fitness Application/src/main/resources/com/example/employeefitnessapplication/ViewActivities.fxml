<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<AnchorPane fx:id="viewActivitiesPane" prefHeight="650.0" prefWidth="900.0" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.employeefitnessapplication.controller.ViewActivitiesController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
    <children>
        <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox styleClass="form-container" maxWidth="850.0" spacing="15.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Button onAction="#navigateToDashboard" styleClass="back-button" text="â† Back to Dashboard" />
                                <Region HBox.hgrow="ALWAYS" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                        </HBox>

                        <Label styleClass="section-header" text="View &amp; Filter Activities" />

                        <HBox alignment="CENTER" spacing="10.0" style="-fx-padding: 10 0 10 0;">
                            <children>
                                <ComboBox fx:id="employeeFilterComboBox" prefWidth="250.0" promptText="Filter by Employee" />
                                <ComboBox fx:id="activityFilterComboBox" prefWidth="250.0" promptText="Filter by Activity Type" />
                                <Button fx:id="filterButton" onAction="#handleFilter" styleClass="nav-button" prefHeight="40.0" text="Filter" />
                                <Button fx:id="clearButton" onAction="#handleClearFilter" styleClass="clear-button" text="Clear" />
                            </children>
                        </HBox>

                        <TableView fx:id="activitiesTableView" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="employeeNameColumn" prefWidth="150.0" text="Employee Name" />
                                <TableColumn fx:id="activityTypeColumn" prefWidth="120.0" text="Activity Type" />
                                <TableColumn fx:id="measurementColumn" prefWidth="120.0" text="Measurement" />
                                <TableColumn fx:id="dateColumn" prefWidth="120.0" text="Date" />
                                <TableColumn fx:id="pointsColumn" prefWidth="120.0" text="Calculated Points" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
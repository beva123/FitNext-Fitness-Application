<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="dashboardPane" prefHeight="650.0" prefWidth="900.0" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.employeefitnessapplication.controller.DashboardController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label styleClass="section-header" text="Dashboard Overview" />

                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button onAction="#navigateToAddActivity" styleClass="nav-button" text="Add New Activity" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
                        <Button onAction="#navigateToViewActivities" styleClass="nav-button" text="View All Activities" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
                        <Button onAction="#navigateToLeaderboard" styleClass="nav-button" text="Show Leaderboard" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
                    </children>
                </HBox>

                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <VBox alignment="CENTER_LEFT" styleClass="stats-card" HBox.hgrow="ALWAYS">
                            <children><Label styleClass="card-title" text="TOTAL ACTIVITIES LOGGED" /><Label fx:id="totalActivitiesLabel" styleClass="card-value" text="0" /></children>
                        </VBox>
                        <VBox alignment="CENTER_LEFT" styleClass="stats-card" HBox.hgrow="ALWAYS">
                            <children><Label styleClass="card-title" text="TOTAL EMPLOYEES" /><Label fx:id="totalEmployeesLabel" styleClass="card-value" text="0" /></children>
                        </VBox>
                        <VBox alignment="CENTER_LEFT" styleClass="stats-card" HBox.hgrow="ALWAYS">
                            <children><Label styleClass="card-title" text="TOP PERFORMER" /><Label fx:id="topPerformerLabel" styleClass="card-value" text="N/A" /></children>
                        </VBox>
                    </children>
                </HBox>
                <HBox spacing="20.0" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox styleClass="stats-card" HBox.hgrow="ALWAYS">
                            <children><Label styleClass="section-header" text="Activities by Type" /><BarChart fx:id="activitiesBarChart" animated="true" legendVisible="false" VBox.vgrow="ALWAYS"><xAxis><CategoryAxis side="BOTTOM" /></xAxis><yAxis><NumberAxis side="LEFT" /></yAxis></BarChart></children>
                        </VBox>
                        <VBox styleClass="stats-card" HBox.hgrow="ALWAYS">
                            <children><Label styleClass="section-header" text="Recent Activities" /><TableView fx:id="recentActivitiesTable" VBox.vgrow="ALWAYS"><columns><TableColumn fx:id="employeeNameColumn" prefWidth="120.0" text="Employee" /><TableColumn fx:id="activityTypeColumn" prefWidth="100.0" text="Activity" /><TableColumn fx:id="dateColumn" prefWidth="100.0" text="Date" /></columns><columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy></TableView></children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>